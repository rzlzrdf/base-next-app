// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Collection {
  id          Int @id @default(autoincrement())
  user_email  String
  name        String

  @@unique([user_email])
}

model User {
  id        Int @id @default(autoincrement())
  email     String @unique
  name      String
  password  String
}